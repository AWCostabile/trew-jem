{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "lib": ["es2017", "es2018", "dom"],
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "outDir": "./dist",
    "paths": {
      "client/*": ["src/client/*"],
      "server/*": ["src/server/*"],
      "shared/*": ["src/shared/*"],
      "static/*": ["src/static/*"]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "include": ["src", "tests", "types/**/*.ts", "bundling/console-effect.js"]
}
